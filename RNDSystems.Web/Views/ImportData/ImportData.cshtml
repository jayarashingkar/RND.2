@model RNDSystems.Models.ViewModels.ImportDataViewModel
@{
    ViewBag.Title = "ImportData";
}

<div class="panel-heading">Import Data</div>
<div class="panel_b" style="min-height:500px">
    <div id="searchDiv" class="container">

        <div class="row">
            <div class="col-md-3 pull-right">
                <button id="btnBack" onclick="window.history.back();" class="btn btn-primary btn-large"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</button>
            </div>
        </div>

       @* <label for="lblImportTypes" class="cols-sm-2 control-label">Select Import Type:</label>*@ 
        <label for="lblImportTypes"  id="lblImportTypes"  class="cols-sm-2 control-label bg-primary text-uppercase">Select Import Type</label>
        @*<form>              
            <input type="radio" id="Default" value="Default" name="ImportRadio" checked>Default<br>
            <input type="radio" id="Custom" value="Custom" name="ImportRadio">Custom        
        </form>*@
       
        <div class="row">
                <div class="col-md-3 ">                  
                    <form>
                        <input type="radio" id="Default" value="Default" name="ImportRadio" checked>Default<br>
                        <input type="radio" id="Custom" value="Custom" name="ImportRadio">Custom<br>
                        <input type="radio" id="Manual" value="Manual" name="ImportRadio" disabled>Manual Entry
                    </form>
                </div>
                <div class="col-md-3 ">                    
                    <div class="form-group">
                        <div class="button btn btn-primary" id="btnSelectImport">Select</div>
                    </div>
                </div>
        </div>
        @*<br><label for="" style="color:blue; text-decoration:underline; text-decoration-color: darkblue"class="cols-sm-2 control-label" >Import Default</label>*@
        <br><label for="hdImportDefault" id="hdImportDefault"  class="cols-sm-2 control-label bg-info text-uppercase">Import Default</label>
        <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="lblddTestTypes" class="cols-sm-2 control-label">Test Type</label>
                        <div class="cols-sm-10">
                            @Html.DropDownList("ddTestTypesDefault", ViewBag.ddTestTypes as IEnumerable<SelectListItem>, new { @class = "show-tick", data_size = "6" })
                        </div>
                    </div>
                </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="button btn btn-success" id="btnImportDefault">Import Default</div>
                </div>
            </div>
        </div>
       
        <br><label for="hdImport"  id="hdImport" class="cols-sm-2 control-label bg-info text-uppercase">Import Custom</label>
            <div class="row">
                <div class="col-md-3">                    
                    <div class="form-group">
                        <label for="lblddTestTypes" class="cols-sm-2 control-label">Test Type</label>
                        <div class="cols-sm-10">
                            @Html.DropDownList("ddTestTypes", ViewBag.ddTestTypes as IEnumerable<SelectListItem>, new { @class = "show-tick", data_size = "6" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-3">
                            <input type="file" id="filePath1" name="filePath1" class="hidden" />
                            <input type="text" id="filePathChoose" name="filePathChoose" class="form-control" placeholder='Choose a file...' />
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-default btn-choose" id="Choose" name="Choose" type="button">Choose</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success " id="Import" name="Import">Import</button>
                            <button type="reset" class="btn btn-danger" id="Reset" name="Reset">Reset</button>
                        </div>
                    </div>
                </div>
            </div>
          
            <div class="row">
                <div class="col-md-16">
                    <h4>
                        <label id="lblFileName" class="col-md-16 control-label bg-primary"></label>
                    </h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-16">
                    <h4>
                        <label id="lblError" class="col-md-16 control-label btn-danger"></label><br> 
                        <label id="lblImported" class="col-md-16 control-label bg-success"></label>                     
                    </h4>
                </div>
            </div>

        <br><label for="hdManualEntry" id="hdManualEntry" class="cols-sm-2 control-label bg-info text-uppercase text-muted">Manual Entry</label>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group disabled">
                        <label for="lblddWorkStudyId" class="cols-sm-2 control-label">WorkStudyID</label>
                        <div class="cols-sm-10">
                            @Html.DropDownList("ddWorkStudyId", ViewBag.ddWorkStudyId as IEnumerable<SelectListItem>, new { @class = "show-tick" })
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group disabled">
                        <label for="lblddTestNos" class="cols-sm-2 control-label">Test Number</label>
                        <div class="cols-sm-10">
                            @Html.DropDownList("ddTestNos", ViewBag.ddWorkStudyId as IEnumerable<SelectListItem>, new { @class = "show-tick" })
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <button id="btnOpenTest" class="btn btn-success disabled"><i class="fa fa-plus" aria-hidden="true"></i>Open Test</button>
                </div>

            </div>
        </div>
@*  @{Html.RenderPartial("_Repeater", "ImportDataRepeater");}*@
</div>
@section scripts{
    @Scripts.Render("~/bundles/ImportData")
    @*<script>
            $(document).ready(function () {
                LoadGrid("ImportDataRepeater");
            });
        </script>*@
}
