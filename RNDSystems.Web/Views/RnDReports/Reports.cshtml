@model  RNDSystems.Models.ReportsViewModel.ReportsViewModel
@{
    ViewBag.Title = "Reports";
}

<div class="panel-heading">R&D Reports</div>
<div class="panel-body"  style="min-height:500px">
    <div id="searchDiv" class="container">
        <div class="col-md-3 pull-right">
            <button id="btnBack" onclick="window.history.back();" class="btn btn-primary btn-large"><i class="fa fa-arrow-left" aria-hidden="true"></i>Back</button>
        </div>
        @*<form action="ExportToExcel" method="post">
            @*<form action="ViewReport" method="post">*@
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="lblTestType" class="cols-sm-2 control-label">Test Type</label>
                    <div class="cols-sm-10">
                        @Html.DropDownList("ddTestType", ViewBag.ddTestType as IEnumerable<SelectListItem>, new { @class = "show-tick" })
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <button id="btnViewReport" class="btn btn-info btn-large"><i class="fa fa-list-alt" aria-hidden="true"></i>View Report</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/Reports")
}